<!DOCTYPE html>
<html>
<head>
  <title>Seed cms</title>
  <%= stylesheet_link_tag    "seed_cms/application", media: "all" %>
  <%= javascript_include_tag "seed_cms/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if !flash.empty? %>
    <% flash.keys.each do |k| %> 
        <div class="alert alert-info <%= k %>">
            <%= flash[k] %>
        </div>  
    <% end %>   
  <% end %>
  <div class="container-fuild">
    <div class="row">
      <div class="content">
        <%= yield %>
      </div>
      <div class="sidebar">
        <ul class="nav nav-pulls nav-stacked">
          <% SeedCms.configuration.content_classes.each do |class_name| %>
            <li>
              <%= link_to class_name.tableize.titleize, entries_path(content_class: class_name.tableize) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>
